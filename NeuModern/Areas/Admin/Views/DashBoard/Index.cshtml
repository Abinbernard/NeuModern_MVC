                            </thead>
                            <tbody>
                                @foreach (var product in Model.TopSellingCategories)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>@Model.CategorySales.GetValueOrDefault(product.Id, 0)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>





</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var selectedFilter; // Declare selectedFilter variable in outer scope
        var myChart; // Variable to store chart instance

        function loadData(filter) {
            selectedFilter = filter; // Update selectedFilter value
            $.ajax({
                type: "POST",
                url: "/Admin/DashBoard/Index",
                data: { filter: filter },
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: OnSuccessResult,
                error: OnError
            });
        }

        // Function to handle success response
        function OnSuccessResult(data) {
            var chartLabels = data.chartLabels;
            var chartData = data.chartData;

            var barColor = ["orange", "orange", "purple", "red"];
            console.log("Server Response:", data);
            console.log("Chart Labels:", chartLabels);
            console.log("Chart Data:", chartData);

            // Filter chart data based on selected filter
            var filteredLabels = [];
            var filteredData = [];
            if (selectedFilter === "daily") {
                var todayIndex = chartLabels.indexOf("Today");
                if (todayIndex !== -1) {
                    filteredLabels.push(chartLabels[todayIndex]);
                    filteredData.push(chartData[todayIndex]);
                }
            }
            else if (selectedFilter === "weekly") {
                var thisWeekIndex = chartLabels.indexOf("This Week");
                if (thisWeekIndex !== -1) {
                    filteredLabels.push(chartLabels[thisWeekIndex]);
                    filteredData.push(chartData[thisWeekIndex]);
                }
            }
            else if (selectedFilter === "monthly") {
                var thisMonthIndex = chartLabels.indexOf("This Month");
                if (thisMonthIndex !== -1) {
                    filteredLabels.push(chartLabels[thisMonthIndex]);
                    filteredData.push(chartData[thisMonthIndex]);
                }
            }
            else if (selectedFilter === "yearly") {
                var thisYearIndex = chartLabels.indexOf("This Year");
                if (thisYearIndex !== -1) {
                    filteredLabels.push(chartLabels[thisYearIndex]);
                    filteredData.push(chartData[thisYearIndex]);
                }
            }


            // Destroy previous chart if it exists
            if (myChart) {
                myChart.destroy();
            }

            // Render chart with filtered data
            myChart = new Chart("myChart", {
                type: "bar",
                data: {
                    labels: filteredLabels,
                    datasets: [{
                        backgroundColor: barColor,
                        data: filteredData
                    }]
                }
            });
        }

        // Function to handle errors
        function OnError(err) {
            // Handle errors if needed
        }

        // Load data for all filters initially
        loadData("daily");
        loadData("weekly");
        loadData("monthly");
        loadData("yearly");

        $("#filterSelect").change(function () {
            selectedFilter = $(this).val(); // Update selectedFilter value
            console.log("Selected Filter:", selectedFilter); // Log selected filter value
            loadData(selectedFilter);
        });
    });

</script>