@model Category
<div class="col-6 align-content-center">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-warning bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Edit Category</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <input asp-for="Id" hidden />
                <div class="border p-3 mt-4 border-primary">
                    <div class="row pb-2">
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control border-0 shadow" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DisplayOrder"></label>
                        <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="IsActive"></label>
                        <select asp-for="IsActive" class="form-control border-0 shadow">
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>


                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-warning form-control">Update</button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back To List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
